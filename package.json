{
  "name": "internal-tools",
  "version": "1.13.9",
  "private": true,
  "license": "AGPL-3.0",
  "repository": "https://github.com/renovatebot/internal-tools.git",
  "author": "Rhys Arkins <rhys@arkins.net>",
  "main": "dist/index.js",
  "engines": {
    "node": " >=16.0.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "cd src && ncc build ./index.ts -o ../dist -s --target es2021",
    "eslint": "eslint .",
    "eslint:fix": "yarn eslint --fix",
    "lint": "run-s eslint prettier",
    "prepare": "husky install",
    "prerelease": "run-s clean compile",
    "prettier": "prettier \"{**/*,*}.*\" --check --ignore-unknown",
    "prettier:fix": "prettier \"{**/*,*}.*\" --write --ignore-unknown",
    "release": "semantic-release",
    "start": "run-s compile && node dist"
  },
  "dependencies": {
    "@actions/core": "1.9.0",
    "@actions/exec": "1.1.1",
    "@actions/github": "5.0.3",
    "@actions/io": "1.1.2",
    "@sindresorhus/is": "4.6.0",
    "chalk": "4.1.2",
    "delay": "5.0.0",
    "find-up": "5.0.0",
    "got": "11.8.5",
    "renovate": "32.17.1",
    "semver": "7.3.7",
    "shelljs": "0.8.5",
    "strip-ansi": "7.0.1",
    "tslib": "2.4.0",
    "www-authenticate": "0.6.2"
  },
  "devDependencies": {
    "@jest/globals": "27.5.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.5",
    "@semantic-release/npm": "9.0.1",
    "@types/jest": "27.5.2",
    "@types/node": "16.11.43",
    "@types/semver": "7.3.10",
    "@types/shelljs": "0.8.11",
    "@typescript-eslint/eslint-plugin": "5.30.5",
    "@typescript-eslint/parser": "5.30.5",
    "@vercel/ncc": "0.34.0",
    "conventional-changelog-conventionalcommits": "4.6.3",
    "eslint": "8.19.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-promise": "6.0.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "nock": "13.2.8",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "prettier-plugin-package": "1.3.0",
    "pretty-quick": "3.1.3",
    "semantic-release": "19.0.3",
    "ts-jest": "27.1.5",
    "typescript": "4.7.4"
  },
  "resolutions": {
    "**/gauge/**/ansi-regex": "^5.0.1",
    "**/lock-verify/@iarna/cli": ">=2"
  },
  "contributors": [
    "Michael Kriese <michael.kriese@visualon.de>"
  ]
}
