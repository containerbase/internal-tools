{
  "name": "internal-tools",
  "version": "0.0.0-PLACEHOLDER",
  "private": true,
  "license": "AGPL-3.0",
  "repository": "https://github.com/renovatebot/internal-tools.git",
  "author": "Rhys Arkins <rhys@arkins.net>",
  "main": "dist/index.js",
  "engines": {
    "node": "^16.13.0 || >=18.12.0",
    "yarn": "^3.2.0"
  },
  "scripts": {
    "build": "run-s clean compile",
    "clean": "rimraf dist/",
    "compile": "cd src && ncc build ./index.ts -o ../dist -s --target es2021",
    "eslint": "eslint .",
    "eslint:fix": "yarn eslint --fix",
    "lint": "run-s eslint prettier",
    "postinstall": "husky install",
    "prettier": "prettier \"{**/*,*}.*\" --check --ignore-unknown",
    "prettier:fix": "prettier \"{**/*,*}.*\" --write --ignore-unknown",
    "release": "run-s clean compile semantic-release",
    "semantic-release": "semantic-release",
    "start": "run-s compile && node dist",
    "test:node": "INPUT_COMMAND=docker-builder INPUT_DRY_RUN=true INPUT_CONFIG=e2e/node.json INPUT_IMAGE_PREFIX=containerbase/ INPUT_IMAGE=node run-s start"
  },
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/exec": "1.1.1",
    "@actions/github": "5.1.1",
    "@actions/io": "1.1.2",
    "@sindresorhus/is": "4.6.0",
    "auth-header": "1.0.0",
    "chalk": "4.1.2",
    "delay": "5.0.0",
    "find-up": "5.0.0",
    "got": "11.8.6",
    "renovate": "35.8.3",
    "semver": "7.3.8",
    "shelljs": "0.8.5",
    "strip-ansi": "7.0.1",
    "tslib": "2.5.0"
  },
  "devDependencies": {
    "@jest/globals": "29.5.0",
    "@renovate/eslint-plugin": "https://github.com/renovatebot/eslint-plugin#v0.0.5",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.7",
    "@semantic-release/npm": "9.0.2",
    "@tsconfig/node16-strictest": "^1.0.4",
    "@types/auth-header": "1.0.2",
    "@types/jest": "29.4.0",
    "@types/node": "16.18.14",
    "@types/semver": "7.3.13",
    "@types/shelljs": "0.8.11",
    "@typescript-eslint/eslint-plugin": "5.54.1",
    "@typescript-eslint/parser": "5.54.1",
    "@vercel/ncc": "0.36.1",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "cross-env": "7.0.3",
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-formatter-gha": "1.4.2",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-typescript-enum": "2.1.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-extended": "3.2.4",
    "nock": "13.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.4",
    "prettier-plugin-package": "1.3.0",
    "pretty-quick": "3.1.3",
    "rimraf": "4.4.0",
    "semantic-release": "20.1.1",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  },
  "contributors": [
    "Michael Kriese <michael.kriese@visualon.de>"
  ],
  "packageManager": "yarn@3.4.1"
}
